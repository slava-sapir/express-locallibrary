extends layout

block content
  h1= title
  
  ul
    each author in author_list
      li 
        a(href=author.url) #{author.name} 
        if author.date_of_death_formatted==''
          span.text-warning (Date of birth: #{author.date_of_birth_formatted} )
        else if author.date_of_birth_formatted==''
          span.text-warning (Date of birth: unavailable )
        else
          span.text-success  (Lifespan: #{author.date_of_birth_formatted} - #{author.date_of_death_formatted} )
		  
    else
      li There are no authors.